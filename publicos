<!DOCTYPE html>
<html>
<body>
  <h1>Refranes Guardados</h1>
  <ul id="lista-refranes"></ul>
  <script>
    db.collection("refranes").onSnapshot((querySnapshot) => {
      const lista = document.getElementById("lista-refranes");
      lista.innerHTML = "";
      querySnapshot.forEach((doc) => {
        lista.innerHTML += `<li>${doc.data().texto}</li>`;
      });
    });
  </script>
</body>
</html>
